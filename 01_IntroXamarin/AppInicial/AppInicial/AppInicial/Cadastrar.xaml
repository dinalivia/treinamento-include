<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppInicial.Cadastrar"
             Title="Cadastrar Item">
    <StackLayout Margin="10">
        <Entry Placeholder="Nome da atividade" x:Name="nomeItem"/>
        <Entry Placeholder="Descrição da atividade" x:Name="descricaoItem"/>
        <Button Text="Adicionar Item" Clicked="Button_Clicked"/>
        <Button Text="Finalizar" Clicked="Button_Clicked_1"/>
    </StackLayout>
</ContentPage>